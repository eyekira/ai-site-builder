generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum SiteStatus {
  DRAFT
  PUBLISHED
}

enum SectionType {
  HERO
  ABOUT
  CONTACT
  PHOTOS
  MENU
  GALLERY
  REVIEWS
}

enum AssetKind {
  PHOTO
}

enum AssetSource {
  GOOGLE_PLACES
}

enum PhotoSource {
  google
  upload
  ai
}

enum PhotoCategory {
  exterior
  interior
  food
  menu
  drink
  people
  other
}

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  name       String
  phone      String?
  passwordHash String?
  subscribed Boolean @default(false)

  sites Site[]
}

model Site {
  id             Int        @id @default(autoincrement())
  slug           String     @unique
  title          String
  businessTitle  String?
  formattedAddress String?
  phone          String?
  website        String?
  lat            Float?
  lng            Float?
  hoursJson      String?
  status         SiteStatus @default(DRAFT)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  publishedAt    DateTime?
  themeJson      String?
  ownerId        Int?
  anonSessionId  String?
  placeId        String?    @unique
  customDomain   String?    @unique

  owner    User?     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  place    Place?    @relation(fields: [placeId], references: [id], onDelete: SetNull)
  sections Section[]
  assets   Asset[]
  photos   Photo[]

  @@index([anonSessionId])
}

model Photo {
  id         Int           @id @default(autoincrement())
  siteId     Int
  source     PhotoSource
  url        String
  category   PhotoCategory @default(other)
  confidence Float         @default(0)
  categoryConfidence Float?
  tagsJson   String?
  sortOrder  Int           @default(1)
  isHero     Boolean       @default(false)
  isDeleted  Boolean       @default(false)
  deletedAt  DateTime?
  googlePhotoRef String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  site Site @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@index([siteId, category, sortOrder])
  @@index([siteId, isDeleted])
  @@index([siteId, deletedAt])
  @@unique([siteId, googlePhotoRef])
}

model Place {
  id        String  @id
  name      String
  address   String?
  phone     String?
  website   String?
  hoursJson String?
  lat       Float?
  lng       Float?

  sites Site[]
}

model Section {
  id          Int         @id @default(autoincrement())
  siteId      Int
  type        SectionType
  contentJson String
  order       Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  site Site @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@index([siteId, order])
}

model Asset {
  id        Int         @id @default(autoincrement())
  siteId    Int
  kind      AssetKind
  source    AssetSource
  ref       String
  width     Int?
  height    Int?
  createdAt DateTime    @default(now())

  site Site @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@index([siteId])
}

model PreviewSession {
  id        String   @id @default(cuid())
  dataJson  String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
}
